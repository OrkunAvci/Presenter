@page
@model Presenter.Pages.ImageFunctions.DeleteModel

@{
	ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
	<h4>Images</h4>
	<hr />
	<dl class="row">
		<dt class="col-sm-2">
			Description
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Images.description)
		</dd>
		<dt class="col-sm-2">
			Start Date
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Images.start)
		</dd>
		<dt class="col-sm-2">
			Finish Date
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Images.finish)
		</dd>
		<dt class="col-sm-2">
			Link
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Images.link)
		</dd>
		<dt class="col-sm-2">
			Screen No
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Images.screen_no)
		</dd>
	</dl>

	<form method="post">
		<input type="hidden" asp-for="Images.ID" />
		<input type="submit" value="Delete" class="btn btn-danger" /> |
		<a asp-page="./Index">Back to List</a>
	</form>
</div>
