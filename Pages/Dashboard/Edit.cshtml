@page
@model Presenter.Pages.ImageFunctions.EditModel

@{
	ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Images</h4>
<hr />
<div class="row">
	<div class="col-md-4">
		<form method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input type="hidden" asp-for="Images.ID" />
			<div class="form-group">
				<label asp-for="Images.description" class="control-label">Description</label>
				<input asp-for="Images.description" class="form-control" />
				<span asp-validation-for="Images.description" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Images.start" class="control-label">Start Date</label>
				<input asp-for="Images.start" class="form-control" />
				<span asp-validation-for="Images.start" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Images.finish" class="control-label">Finish Date</label>
				<input asp-for="Images.finish" class="form-control" />
				<span asp-validation-for="Images.finish" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Images.link" class="control-label">Link</label>
				<input asp-for="Images.link" class="form-control" />
				<span asp-validation-for="Images.link" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Images.screen_no" class="control-label">Screen Number</label>
				<input asp-for="Images.screen_no" class="form-control" />
				<span asp-validation-for="Images.screen_no" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Images.is_video" class="control-label">Is Video?</label>
				<input asp-for="Images.is_video" class="form-control float-left" />
				<span asp-validation-for="Images.is_video" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Save" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>

<div>
	<a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
