@model Presenter.Pages.Screens.DetailsModel

@{
	ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
	<h4>Screen</h4>
	<hr />
	<dl class="row">
		<dt class="col-sm-2">
			Description
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Screen.description)
		</dd>
		<dt class="col-sm-2">
			Location
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Screen.location)
